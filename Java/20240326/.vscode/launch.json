    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "basic GET",
            "request": "launch",
            "mainClass": "com.nhnacademy.SimpleCurl",
            "projectName": "scurl",
            "args": [
                "java",
                "scurl",
                "50.16.63.240/get"
            ]
        },
        {
            "type": "java",
            "name": "add Header",
            "request": "launch",
            "mainClass": "com.nhnacademy.SimpleCurl",
            "projectName": "scurl",
            "args": [
                "java",
                "scurl",
                "-H",
                "X-Custom-Header: NA",
                "50.16.63.240/get"
            ]
        },
        {
            "type": "java",
            "name": "POST",
            "request": "launch",
            "mainClass": "com.nhnacademy.SimpleCurl",
            "projectName": "scurl",
            "args": [
                "java",
                "scurl",
                "-X",
                "POST",
                "-d",
                "{\"hello\": \"world\"}",
                "-H",
                "Content-Type: application/json",
                "50.16.63.240/post"
            ]
        }
    ]
}
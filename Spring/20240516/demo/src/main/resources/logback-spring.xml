<configuration>
    <appender name="ACCOUNT_FILE" class="ch.qos.logback.core.FileAppender">
        <file>account.log</file>
        <append>true</append>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="PRICE_FILE" class="ch.qos.logback.core.FileAppender">
        <file>price.log</file>
        <append>true</append>
        <encoder>
            <pattern>%date %logger{10} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.example.demo.aop.AccountAop" level="info" additivity="false">
        <appender-ref ref="ACCOUNT_FILE"/>
    </logger>

    <logger name="com.example.demo.aop.PriceAop" level="info" additivity="false">
        <appender-ref ref="PRICE_FILE"/>
    </logger>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
